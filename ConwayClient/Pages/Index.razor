@page "/"

<div class="row">
    <div class="col s12">
        <div class="card-panel blue-grey darken-3">
            <div class="row">
                <div class="col s3 center-align">
                    <buton @onclick="StartGame" class="btn">Start</buton>
                </div>
                <div class="col s3 center-align">
                    <buton @onclick="PauseGame" class="btn">Pause</buton>
                </div>
                <div class="col s3 center-align">
                    <buton @onclick="ResetGame" class="btn">Reset</buton>
                </div>
                <div class="col s3 center-align">
                    <buton @onclick="RandomizeBoard" class="btn">Randomize</buton>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <GameOfLife @ref="_gameOfLife" />
    </div>
</div>

@code {
    private GameOfLife _gameOfLife;

    private async Task StartGame()
    {
        await _gameOfLife.StartGame();
    }

    private async Task PauseGame()
    {
        await _gameOfLife.PauseGame();
    }

    private async Task ResetGame()
    {
        await _gameOfLife.ResetGame();
    }
    private async Task RandomizeBoard()
    {
        await _gameOfLife.RandomizeBoard();
    }
}
